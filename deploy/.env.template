# tadata.ai Community Edition - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Edition Configuration
# =============================================================================

# Edition Type (DO NOT CHANGE for Community Edition)
EDITION_TYPE=community

# Authentication Mode (single-user for Community Edition)
AUTH_MODE=single-user

# =============================================================================
# Required Configuration
# =============================================================================

# Anthropic API Key (required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Security Secrets (auto-generated by setup.sh)
JWT_SECRET=
ENCRYPTION_KEY=
INTERNAL_API_SECRET=
DOWNLOAD_TOKEN_SECRET=

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=tadata

# Application Database User
POSTGRES_TADATA_USER=tadatauser
POSTGRES_TADATA_PASSWORD=

# =============================================================================
# Feature Configuration
# =============================================================================

# Payment/Billing System (disabled in Community Edition)
PAYMENT_ENABLED=false

# Auth Type (local for Community Edition)
AUTH_TYPE=local

# =============================================================================
# Optional Configuration
# =============================================================================

# Docker Image Tags (default: latest)
CLIENT_IMAGE_TAG=latest
SERVER_IMAGE_TAG=latest
FAAS_IMAGE_TAG=latest
FUNCTION_EXECUTOR_IMAGE_TAG=latest

# Port Configuration
# Only the client port is exposed to the host
# All other services communicate on the internal Docker network
CLIENT_PORT=3000
